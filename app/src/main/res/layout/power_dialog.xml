<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/title_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/power_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="'s power"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_text_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title_section"
        android:gravity="center">

        <TextView
            android:id="@+id/status_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_section"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/background_color"
            android:textSize="15sp"
            android:text="This device is "
            />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="ON"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_text_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/status_text_section"
        android:gravity="center">

        <TextView
            android:id="@+id/question_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_section"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/background_color"
            android:textSize="15sp"
            android:text="Do you want to turn"
            />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="OFF"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/power_section"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginLeft="50dp"
        app:cardElevation="0dp"
        android:layout_below="@+id/question_text_section"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/power_option_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color"
            android:text="Set Power"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="@font/inconsolata"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>