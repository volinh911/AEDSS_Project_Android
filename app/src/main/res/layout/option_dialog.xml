<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/title_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/option_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/inconsolata"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="'s option"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/option_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_section"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inconsolata"
        android:textColor="@color/background_color"
        android:textSize="15sp"
        android:text="What do you want to do?"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option_dialog_text"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/frequency_section"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:background="?android:attr/selectableItemBackground"
            app:cardElevation="0dp"
            >

            <Button
                android:id="@+id/frequency_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_color"
                android:text="Set Frequency"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:fontFamily="@font/inconsolata"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/power_section"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="50dp"
            app:cardElevation="0dp"
            >

            <Button
                android:id="@+id/power_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:text="Set Power"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:fontFamily="@font/inconsolata"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>